            Label:
                id: user_data
                text: 'User: \nDate:\n'
                size_hint_x: .8


            Button:
                id: progress_tr
                text: '0%\nLevel\nProgress'
                halign: 'center'
                size_hint_x: .2
                on_parent:
                    root.information_func()

        GridLayout:
