
ScreenManager:
    id: screen_manager

    Profile:
        id: input_screen
        name: 'input_screen'
        manager: 'screen_manager'


    Quests:
        id: quests_screen
        name: 'log_screen'
        manager: 'screen_manager'

    Completion:
        id: completion_screen
        name: 'details_screen'
        manager: 'screen_manager'


